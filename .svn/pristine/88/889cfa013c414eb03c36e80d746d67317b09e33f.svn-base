<div style="position: relative;">


  <div class="dropdowndisplay">
    <div style="position:relative" [class.width60Perc]="dropdownWithDescriptionModel.descriptionKey" [class.width100Perc]="!dropdownWithDescriptionModel.descriptionKey">
      <input type="text" class="form-control form-control-sm" [placeholder]="placeholder" #myInput [value]="selectedValue[dropdownWithDescriptionModel.displayKey] || ''"
        (mouseleave)="onMouseLeave()" [disabled]="is_editAble" (focus)="onFocus()" (keyup)="onKeyUp(myInput)">
      <i class="fa fa-caret-down dropdownCaret" (click)="togggleDropDown()"></i>
    </div>

    <div *ngIf="dropdownWithDescriptionModel.descriptionKey" class="width40Perc">
      <input readonly class="form-control form-control-sm" [value]="selectedValue[dropdownWithDescriptionModel.descriptionKey]">
    </div>
  </div>

  <div #dropdown class="dropdownCls shortIt" [style.height]="show ? dropdownHeight : 0">
    <div *ngIf="show" class="dropdownDiv">
      <div [style.width]="listWidth + 'px'" class="row   dropDownSlim" (mouseenter)="onMouseEnter()" (mouseleave)="onMouseLeave()">
        <table class="table table-bordered table-hover  table-light ">

          <thead *ngIf="header">
            <tr>
              <ng-container *ngFor="let listDisplayKeys of  basicSetting.ListDisplayKeys">
                <th>{{listDisplayKeys.headerName}}</th>
              </ng-container>
            </tr>
          </thead>

          <ng-container *ngFor="let list of listData">
            <tr>
              <ng-container *ngFor="let listDisplayKeys of dropdownWithDescriptionModel.ListDisplayKeys">
                <td (click)="onShownBodyClick(list)">{{list[listDisplayKeys.displayKey]}}</td>
              </ng-container>
            </tr>
          </ng-container>
        </table>
      </div>

    </div>
  </div>
</div>

