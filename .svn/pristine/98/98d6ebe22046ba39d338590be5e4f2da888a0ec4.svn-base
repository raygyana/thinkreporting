<div class="modal-body">
  <div class="clearfix"></div>
  <div class="content-box-inner">
    <div class="border mt-2  p-2 pt-4  mt-sm-4 ">
      <fieldset>
        <legend class=" text-uppercase">Quantity Discount</legend>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="LastName">Schedule :</label>
          </div>

          <div class="form-group col-md-6">
            <input type="text " class="form-control " placeholder=" " name="qschedule" [(ngModel)]="discountsModel.qschedule">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="LastName">Discription :</label>
          </div>

          <div class="form-group col-md-6">
            <input type="text " class="form-control " placeholder=" " name="qdiscription" [(ngModel)]="discountsModel.qdiscription">
          </div>
        </div>
      </fieldset>
    </div>
    <div class="border mt-2  p-2 pt-4  mt-sm-4 ">
      <fieldset>
        <legend class=" text-uppercase">Discount Card</legend>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="LastName">Code :</label>
          </div>

          <div class="form-group col-md-6">
            <input type="text " class="form-control " placeholder=" " name="dccode" [(ngModel)]="discountsModel.dccode">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="LastName">Discription :</label>
          </div>

          <div class="form-group col-md-6">
            <input type="text " class="form-control " placeholder=" " name="dcdiscription" [(ngModel)]="discountsModel.dcdiscription">
          </div>
        </div>
      </fieldset>
    </div>
    <div class="border mt-2  p-2 pt-4  mt-sm-4 ">
      <fieldset>
        <legend class=" text-uppercase">Manual Discount</legend>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="LastName">Fixed Amount:</label>
          </div>

          <div class="form-group col-md-4">
            <input type="text " class="form-control " placeholder=" " name="fixedamount" [(ngModel)]="discountsModel.fixedamount" (ngModelChange)="calculatepercent()">
          </div>
          <div class="form-group col-md-2">
            <input type="text " class="form-control " placeholder=" " name="fixedamountcourrency" [(ngModel)]="discountsModel.fixedamountcurrency" readonly="readonly">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="LastName">Percentage :</label>
          </div>

          <div class="form-group col-md-5">
            <input type="text " class="form-control " placeholder=" " name="percentage" [(ngModel)]="discountsModel.percentage" (ngModelChange)="calculatefixedAmount()">
          </div>
          <div class="form-group col-md-1">
            <label for="LastName">%</label>
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="LastName">Order Item Amount :</label>
          </div>

          <div class="form-group col-md-4">
            <input type="text " class="form-control " placeholder=" " name="orderitemamount" [(ngModel)]="discountsModel.orderitemamount" readonly="readonly">
          </div>
          <div class="form-group col-md-2">
            <input type="text " class="form-control " placeholder=" " name="orderitemamountcurrency" [(ngModel)]="discountsModel.orderitemamountcurrency"
              readonly="readonly">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-md-6">
            <label for="LastName">New Order Item Amount :</label>
          </div>

          <div class="form-group col-md-4">
            <input type="text " class="form-control " placeholder=" " name="neworderitemamount" [(ngModel)]="discountsModel.neworderitemamount" readonly="readonly">
          </div>
          <div class="form-group col-md-2">
            <input type="text " class="form-control " placeholder=" " name="neworderitemamountcurrency" [(ngModel)]="discountsModel.neworderitemamountcurrency"
              readonly="readonly">
          </div>
        </div>
      </fieldset>
    </div>
    <br/>
    <div class="row ">
      <div class="col-md-12 text-right my-3">
        <button type="submit" class="btn btn-primary" data-dismiss="modal" (click)="applydiscount()">
          OK</button>

      </div>
    </div>
  </div>
</div>
